<Window x:Class="Client.NewTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="NewTableWindow" Height="450" Width="800">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Width="100" Height="50" Margin="0 0 200 300" Content="Горячие блюда"/>
        <Button Grid.Column="0" Width="100" Height="50" Margin="0 0 200 150" Content="Закуски"/>
        <Button Grid.Column="0" Width="100" Height="50" Margin="0 0 200 0" Content="Горячие напитки"/>
        <Button Grid.Column="0" Width="100" Height="50" Margin="0 0 200 -150" Content="Холодные напитки"/>
        <Button Grid.Column="0" Width="100" Height="50" Margin="0 0 -100 300" Content="Салаты"/>
        <Button Grid.Column="0" Width="100" Height="50" Margin="0 0 -100 150" Content="Супы"/>
        <Button Grid.Column="0" Width="100" Height="50" Margin="0 0 -100 0" Content="Алкоголь"/>
        <Button Grid.Column="0" Width="100" Height="50" Margin="0 0 -100 -150" Content="Спец"/>

        

        
    </Grid>
</Window>
