<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Canvas x:Key="PanelButtons" >

    <Button  Content="Open" Background="Green" Command="{Binding SomeCommand}" Width="60" Height="60"  Margin ="80 40 0 0"/>
    <Button  Content="Close" Background="Red" Command="{Binding SomeCommand}" Width="60" Height="60"  Margin ="180 40 0 0"/>
    <Button  Content="ToPay" Background="Yellow" Command="{Binding SomeCommand}" Width="60" Height="60"  Margin ="280 40 0 0"/>
    <Button  Content="Order" Background="CornflowerBlue" Command="{Binding SomeCommand}" Width="60" Height="60"  Margin ="380 40 0 0" />
    </Canvas>
    
    <Canvas x:Key="TableButton">
       
   
        <Canvas Grid.Column="0" Grid.Row="0" Background="Black" Height="60" Width="60" Margin ="80 40 0 0" >
            <Button Height="60" Width="60" Background="Red" Opacity="0.1" Command="{Binding SomeCommand}"/> 
        </Canvas>
        <Canvas Grid.Column="0" Grid.Row="0" Background="Black" Height="60" Width="60"  Margin ="180 40 0 0">
            <Button Height="60" Width="60" Background="Red" Opacity="0.2" Command="{Binding SomeCommand}"/> 
        </Canvas>
        <Canvas Grid.Column="0" Grid.Row="0" Background="Black" Height="60" Width="60" Margin ="280 40 0 0">
            <Button Height="60" Width="60" Background="Red" Opacity="0.3" Command="{Binding SomeCommand}"/> 
        </Canvas>
        <Canvas Grid.Column="0" Grid.Row="0" Background="Black" Height="60" Width="60" Margin ="380 40 0 0">
            <Button Height="60" Width="60" Background="Red" Opacity="0.4" Command="{Binding SomeCommand}"/>
        </Canvas>
        <Canvas Grid.Column="0" Grid.Row="0" Background="Black" Height="60" Width="60" Margin ="80 120 0 0">
            <Button Height="60" Width="60" Background="Red" Opacity="0.5" Command="{Binding SomeCommand}"/>
        </Canvas>
        <Canvas Grid.Column="0" Grid.Row="0" Background="Black" Height="60" Width="60" Margin ="180 120 0 0">
            <Button Height="60" Width="60" Background="Red" Opacity="0.6" Command="{Binding SomeCommand}"/>
        </Canvas>
        <Canvas Grid.Column="0" Grid.Row="0" Background="Black" Height="60" Width="60" Margin ="280 120 0 0">
            <Button Height="60" Width="60" Background="Red" Opacity="0.7" Command="{Binding SomeCommand}"/>
        </Canvas>
        <Canvas Grid.Column="0" Grid.Row="0" Background="Black" Height="60" Width="60" Margin ="380 120 0 0">
            <Button Height="60" Width="60" Background="Red" Opacity="0.8" Command="{Binding SomeCommand}"/>
        </Canvas>
    </Canvas>
</ResourceDictionary>